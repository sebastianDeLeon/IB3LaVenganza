@using InternetBanking.Core.Application.ViewModels.Transational;
@model TransationalVM;

@{
    ViewData["Title"] = "Home";
}

    <div class="m-5">
        <div class="row mx-auto mb-3">
            <div class="col-12 text-center">
                <h2>Informaciones Relevantes</h2>
            </div>
            <br/>
            <div class="col-4 mt-3">
                <p class="text-body fs-4">Transacciones realizadas: @Model.Count_transactional</p>
            </div>
            <div class="col-8 mt-3">
                <p class="text-body fs-4">Transacciones realizadas (Desde la creacion del sistema): @Model.Count_transactional_History</p>
            </div>
            <div class="col-4 mt-3">
                <p class="text-body fs-4">Pagos realizados: @Model.Paids</p>
            </div>
            <div class="col-8 mt-3">
                <p class="text-body fs-4">Pagos realizados (Desde la creacion del sistema): @Model.Paids_History</p>
            </div>
            <div class="col-4 mt-3">
                <p class="text-body fs-4">Cuantas Activas : @Model.UserActives</p>
            </div>
            <div class="col-6 mt-3">
                <p class="text-body fs-4">Cuentas Inactivas: @Model.UserInactives</p>
            </div>
            <div class="col-12 mt-3">
                <p class="text-body fs-4">Cantidad total de los productos asignados a los clientes: @Model.CountProduct</p>
            </div>
        </div>
    </div>