@using InternetBanking.Core.Application.ViewModels.Transational;
@model TransationalVM;

@{
	ViewData["Title"] = "Home";
}


<div class="m-5 container w-75 d-flex flex-column justify-content-center align-items-center">

	<table class="table">

		<thead class="table">
			<tr>
				<th class=""><h2>Informaciones Relevantes</h2></th>
				<th></th>
			</tr>
		</thead>

		<tbody>

			<tr class="mt-3"> 
				<th class="bg-dark text-light"><h5>Hoy</h5></th>
				<th class="bg-dark text-light"><h5>Historial</h5></th>	
			</tr>

			<tr>
				<td class="text-body fs-4">Transacciones: @Model.Count_transactional</td>
				<td class="text-body fs-4">Transacciones: @Model.Count_transactional_History</td>
			</tr>

			<tr>
				<td class="text-body fs-4">Pagos realizados: @Model.Paids</td>
				<td class="text-body fs-4">Pagos realizados: @Model.Paids_History</td>
			</tr>

			<tr class="mt-3">
				<th class="bg-dark text-light"><h5>Cuentas</h5></th>
				<th class="bg-dark text-light"></th>
			</tr>

			<tr>
				<td class="text-body fs-4">Activas : @Model.UserActives</td>
				<td class="text-body fs-4">Inactivas: @Model.UserInactives</td>
			</tr>

			<tr class="mt-3">
				<th class="bg-dark text-light"><h5>Cuentas</h5></th>
				<th class="bg-dark text-light"></th>
			</tr>

		</tbody>

	</table>

	<div class="col-12 mt-3">
			<p class="text-body fs-4">Cantidad total de los productos asignados a los clientes: @Model.CountProduct</p>
	</div>
	

</div>